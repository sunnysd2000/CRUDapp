
<div class="container">
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form action="/products/create" method="post">
          <div class="form-group" >
              <input type="text" name="book_name" class="form-control" placeholder="Book Name" />
          </div>
          <br>
          <div class="form-group">
              <input type="text" name="publication" class="form-control" placeholder="Publication" />
          </div>
          <br>
          <div class="form-group">
              <input type="number" name="price" class="form-control" placeholder="Price" />
          </div>
          <br>
          <div class="form-group">
              <button class="btn btn-info">Save Book</button>
          </div>
      </form>
    </div>
  </div>
</div>
